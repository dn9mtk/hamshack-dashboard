{
  "name": "hamshack-dashboard",
  "version": "0.1.0",
  "description": "Real-time ham radio dashboard: spots, space weather, propagation, PSK Reporter, map",
  "author": "Hamshack Dashboard",
  "private": true,
  "engines": { "node": ">=18.0.0" },
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm start",
    "dev:client": "cd client && npm run dev",
    "install:all": "npm install && cd server && npm install && cd ../client && npm install",
    "build": "cd client && npm run build",
    "start": "npm run build && node server/index.js",
    "start:server": "node server/index.js",
    "sync-repeaters": "node server/scripts/syncRepeaters.js",
    "electron": "npm run build && electron .",
    "electron:dev": "electron .",
    "electron:pack": "npm run build && npx electron-builder --win"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.hamshack.dashboard",
    "productName": "Hamshack Dashboard",
    "directories": { "output": "dist-electron" },
    "files": [
      "electron/**",
      "client/dist/**",
      "server/**"
    ],
    "extraResources": [
      { "from": "server", "to": "server", "filter": ["**/*"] },
      { "from": "client/dist", "to": "client/dist", "filter": ["**/*"] }
    ],
    "win": {
      "target": "nsis",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
